# Copy to .env and fill in values. Never commit .env.
# Required for apps that use Supabase/HubSpot/email; optional for static sites.

# Public (exposed to browser)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=My Site
NEXT_PUBLIC_AREA_SERVED=
NEXT_PUBLIC_ANALYTICS_ID=

# Rate limiting (optional; required in production for lead forms)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Supabase (required for lead capture / your-dedicated-marketer)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# HubSpot (required for lead pipeline in your-dedicated-marketer)
HUBSPOT_PRIVATE_APP_TOKEN=

# Email (optional)
EMAIL_PROVIDER=resend
EMAIL_API_KEY=
EMAIL_FROM_ADDRESS=
EMAIL_TO_ADDRESS=
EMAIL_SEND_THANK_YOU=false

# Scheduling (optional)
SCHEDULING_PROVIDER=none
CALENDLY_URL=
CALCOM_USERNAME=

# Database (required for API gateway and integration tests)
DATABASE_URL=
DATABASE_MIGRATIONS_DIR=services/api-gateway/backend/migrations
