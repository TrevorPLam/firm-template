# Copy to .env and fill in values. Never commit .env.
# Required for apps that use Supabase/HubSpot/email; optional for static sites.

# Public (exposed to browser)
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=My Site
NEXT_PUBLIC_AREA_SERVED=
NEXT_PUBLIC_ANALYTICS_ID=

# Rate limiting (optional; required in production for lead forms)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Supabase (required for lead capture / your-dedicated-marketer)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# HubSpot (required for lead pipeline in your-dedicated-marketer)
HUBSPOT_PRIVATE_APP_TOKEN=

# Email (optional)
EMAIL_PROVIDER=resend
EMAIL_API_KEY=
EMAIL_FROM_ADDRESS=
EMAIL_TO_ADDRESS=
EMAIL_SEND_THANK_YOU=false

# Scheduling (optional)
SCHEDULING_PROVIDER=none
CALENDLY_URL=
CALCOM_USERNAME=

# AI services (optional)
AI_PROVIDER=none
AI_API_KEY=
AI_MODEL=gpt-4o-mini
AI_MAX_TOKENS=800
AI_TEMPERATURE=0.4
AI_ENABLE_GENERATION=true
AI_ENABLE_PERSONALIZATION=false
AI_ENABLE_OPTIMIZATION=true
AI_MANAGEMENT_CONSOLE_URL=

# PWA (optional)
PWA_ENABLED=true
PWA_OFFLINE_FALLBACK_PATH=/offline
PWA_SERVICE_WORKER_PATH=/sw.js
PWA_ENABLE_INSTALL_PROMPT=true
PWA_UPDATE_STRATEGY=prompt
PWA_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_VAPID_KEY=
NEXT_PUBLIC_PWA_NAME=Firm Web App
NEXT_PUBLIC_PWA_SHORT_NAME=Firm
NEXT_PUBLIC_PWA_THEME_COLOR=#111827
NEXT_PUBLIC_PWA_BACKGROUND_COLOR=#ffffff
NEXT_PUBLIC_PWA_START_URL=/
NEXT_PUBLIC_PWA_DISPLAY=standalone

# CMS (optional)
CMS_PROVIDER=none
CMS_PROJECT_ID=
CMS_DATASET=
CMS_API_TOKEN=
CMS_PREVIEW_SECRET=
CMS_WEBHOOK_SECRET=
CMS_API_BASE_URL=

# Realtime (optional)
REALTIME_PROVIDER=none
REALTIME_SERVER_URL=
REALTIME_APP_ORIGIN=
REALTIME_API_KEY=
REALTIME_ENABLE_PRESENCE=true
REALTIME_CONNECTION_TIMEOUT_MS=10000
REALTIME_MESSAGE_RETENTION_MINUTES=15

# WebAssembly (optional)
WASM_ENABLED=false
WASM_MODULE_PATH=/wasm/module.wasm
WASM_WORKER_PATH=
WASM_DEBUG=false
WASM_TARGET=browser

# Database (required for API gateway and integration tests)
DATABASE_URL=
DATABASE_MIGRATIONS_DIR=services/api-gateway/backend/migrations
